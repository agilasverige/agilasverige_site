!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "sv", :lang => "sv"}
  %head
    %title Agila Sverige 2011
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag '/markitup/skins/simple/style.css'
    = stylesheet_link_tag '/markitup/sets/markdown/style.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'http://code.jquery.com/jquery-1.4.4.min.js'
    = javascript_include_tag '/markitup/jquery.markitup.js'
    = javascript_include_tag '/markitup/sets/markdown/set.js'
  %body{:id => controller.controller_name, :class => :bp}
    %header
      .logo
        %hgroup
          %h1
            %span
              = link_to "Agila Sverige 2011", root_path
          %h2 
            %span "Stockholm 23-24 maj 2011"
      %nav
        %ul
          %li= link_to 'Hem', root_path
          %li= link_to 'Anmälan', new_user_registration_path
          -# %li= link_to 'Program', '#'
          -# %li= link_to 'Tidigare konferenser', '#'
          - if user_signed_in?
            %li= link_to 'Dina inställningar', edit_user_path
            %li= link_to 'Anmäl blixttal', new_user_speaking_proposal_path
    .main
      #flash
        - if flash.size > 0
          - if flash[:notice]
            %p.flash.notice= flash[:notice]
          - if flash[:error]
            %p.flash.error= flash[:error]
          - if flash[:alert]
            %p.flash.notice= flash[:alert]
          - if flash[:warning]
            %p.flash.warning= flash[:warning]
      %aside.sidebar
        .subnavigation
          %ul
            %li
        .follow_us_twitter
          %a{:href => "http://www.twitter.com/agilasverige"} Follow us on Twitter 
        .tweets
          %script{:src => "http://widgets.twimg.com/j/2/widget.js"}
          :javascript
            new TWTR.Widget({
              version: 2,
              type: 'search',
              search: '#agilasverige',
              interval: 20000,
              title: 'Twitter',
              subject: '',
              width: 'auto',
              height: 300,
              theme: {
                shell: {
                  background: '#e20d82',
                  color: '#ffffff'
                },
                tweets: {
                  background: '#ffffff',
                  color: '#444444',
                  links: '#e20d82'
                }
              },
              features: {
                scrollbar: true,
                loop: true,
                live: true,
                hashtags: true,
                timestamp: true,
                avatars: true,
                behavior: 'default'
              }
            }).render().start();
      %section
        = yield
      %aside.sponsors 
        %h2 Sponsorer
        %ul.sponsor_list
          - @sponsors.random_order.each do |sponsor|
            %li
              = link_to(image_tag(sponsor.logo_file, :alt => sponsor.name), sponsor.url)
    %footer
      .contact
        %span &copy; Agila Sverige 2010 |
        %a{:href => 'mailto:info@agilasverige.se'}Kontakta oss
      :javascript 
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      :javascript
        var pageTracker = _gat._getTracker("UA-160245-3");
        pageTracker._initData();
        pageTracker._trackPageview();
